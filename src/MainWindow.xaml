                    </Border>
                </Grid>
                 -->
                <Grid Grid.Row="1" Grid.Column="0">
                    <!-- List area of the dynamic feed. This is where the total library for the current view is displayed -->
                    <DataGrid x:Name="CurrentViewList" ItemsSource="{Binding}" IsReadOnly="True"
                              Background="#FFEEEEEE" BorderBrush="{x:Null}" BorderThickness="0"
                              RowHeight="25" HorizontalGridLinesBrush="White" VerticalGridLinesBrush="White"
                              AutoGenerateColumns="False" AlternatingRowBackground="#FFD6D6D6"
                              Style="{DynamicResource ListDataGridStyle}">
                        <DataGrid.Columns>                            
                            <DataGridTextColumn x:Name="ListTitleHeader" Binding="{Binding ObjTitle}" Width="4*" >
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridColumnHeader}}, Path=ActualWidth}">
                                            <Grid.RowDefinitions />
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="25px" />
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Row="0" Grid.Column="0">
                                                <ToggleButton x:Name="TitleSortBttn" Style="{DynamicResource ListSortByBttn}" >Title</ToggleButton>
                                            </Grid>
                                            <Grid Grid.Row="0" Grid.Column="1">
                                                <ToggleButton x:Name="AscendTitleBttn" Style="{DynamicResource ListAscenderFilter}" />                                                
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn x:Name="ListCreatorHeader" Header="Author" Binding="{Binding ObjCreator}" Width="3*">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridColumnHeader}}, Path=ActualWidth}">
                                            <Grid.RowDefinitions />
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="25px" />
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Row="0" Grid.Column="0">
                                                <ToggleButton x:Name="AuthorSortBttn" Style="{DynamicResource ListSortByBttn}">Author</ToggleButton>
                                            </Grid>
                                            <Grid Grid.Row="0" Grid.Column="1">
                                                <ToggleButton x:Name="AscendAuthorBttn" Style="{DynamicResource ListAscenderFilter}" />
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="ISBN" Binding="{Binding ObjUniqueID}" Width="2*">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridColumnHeader}}, Path=ActualWidth}">
                                            <Grid.RowDefinitions />
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="25px" />
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Row="0" Grid.Column="0">
                                                <ToggleButton x:Name="ISBNBttn" Style="{DynamicResource ListSortByBttn}">ISBN</ToggleButton>                                                
                                            </Grid>
                                            <Grid Grid.Row="0" Grid.Column="1">
                                                <ToggleButton x:Name="AscendISBNBttn" Style="{DynamicResource ListAscenderFilter}" />
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Rating" Binding="{Binding ObjStarRating}" Width="1*">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridColumnHeader}}, Path=ActualWidth}">
                                            <Grid.RowDefinitions />
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="25px" />
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Row="0" Grid.Column="0">
                                                <ToggleButton x:Name="RatingBttn" Style="{DynamicResource ListSortByBttn}">Rating</ToggleButton>                                                
                                            </Grid>
                                            <Grid Grid.Row="0" Grid.Column="1">
                                                <ToggleButton x:Name="AscendStarBttn" Style="{DynamicResource ListAscenderFilter}" />
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--
                    <TextBlock x:Name="TempListBox" TextWrapping="Wrap"></TextBlock>
                    -->
                </Grid>
                <!-- END List area of the dynamic feed -->
            </Grid>
            <!-- END content body section -->
        </Grid>
        <!-- END body region of the GUI -->
    </Grid>
    <!-- END primary grid definition -->
</Window>
