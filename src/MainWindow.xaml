                                    <Path.Data>
                                        <EllipseGeometry Center="62,29" RadiusX="5" RadiusY="5"/>
                                    </Path.Data>
                                </Path>
                                <Path>
                                    <Path.Data>
                                        <RectangleGeometry Rect="0,0,18.08,60.87" />
                                    </Path.Data>
                                </Path>
                                <Path>
                                    <Path.Data>
                                        <RectangleGeometry Rect="96.34,0,18.08,60.87" />
