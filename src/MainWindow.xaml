                                        <PathGeometry Figures="m 71.879642 177.13403 q -7.615039 -0.0992 -7.615039 -7.68946 v -7.4414 q 0 -5.01055 -3.869531 -5.2586 v -2.87734 q 3.869531 -0.24805 3.869531 -5.35781 v -7.24297 q 0 -7.68945 7.615039 -7.78867 v 3.175 
                                              q -3.943945 0.0992 -3.943945 4.91133 v 7.26777 q 0 5.20898 -3.720703 6.39961 v 0.0992 q 3.720703 1.11621 3.720703 6.35 v 7.16855 q 0 2.75332 0.868164 3.91914 0.892969 1.19063 3.075781 1.24024 z" />
                                    </Path.Data>
                                </Path>
                                <Path Fill="#fff0a30a"
                                      Stroke="#ff2e2233">
                                    <Path.Data>
                                        <RectangleGeometry Rect="20,13.3,14.46,47.83" RadiusX="2.17" RadiusY="2.17" />
                                    </Path.Data>
                                </Path>
                                <Path Fill="#fff0a30a"
