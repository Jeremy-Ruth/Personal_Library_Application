                                        <RectangleGeometry Rect="46.21,51.57,47.83,9.04" RadiusX="1.36" RadiusY="1.36" />
                                    </Path.Data>
                                </Path>
                                <Path Fill="#fff0a30a"
                                      Stroke="#ff2e2233">
                                    <Path.Data>
                                        <RectangleGeometry Rect="46.24,46.01,34.78,4.07" RadiusX="0.61" RadiusY="0.61" />
