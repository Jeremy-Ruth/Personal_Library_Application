<Window x:Class="PersonalLibraryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:PersonalLibraryApp"
        mc:Ignorable="d"
        Title="Library App" Height="800" Width="1100" MinHeight="750" MinWidth="1100"
        WindowStyle="None" ResizeMode="CanResize" Visibility="Visible" AllowsTransparency="True" UseLayoutRounding="True"
        MouseDown="MakeAppDraggable"
        >

    <!-- Window modification to regain resizing and proper maximize size. Necessary due to removing the default menu bar and window commands -->
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0" UseAeroCaptionButtons="False" ResizeBorderThickness="7"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary Source="resources/Styles.xaml" />
    </Window.Resources>

    <Grid>
        <!-- Primary grid definition for the window -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300px" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF46334D" Offset="1"/>
                    <GradientStop Color="#FF633C6E"/>
                </RadialGradientBrush>
            </Grid.Background>
            <!-- Left side vertical menu region of the GUI -->
            <Border Width="20" HorizontalAlignment="Right" >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#0046334D" Offset="0" />
                        <GradientStop Color="#1E1621" Offset="0.9" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid>
                <!-- Define the app title and main menu regions -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="85px"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" Grid.Column="0">
                    <!-- App Title region of the left sidebar -->
                    <Grid>
                        <!-- Define the app title and logo regions -->
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="165px"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="0" Grid.Column="0" >
                            <!-- App title section -->
                            <TextBlock Foreground="White" FontSize="20" FontWeight="Normal" Margin="18,22,0,0">The Library App</TextBlock>
                        </Grid>
                        <!-- END title section -->
                        <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,20,10" VerticalAlignment="Stretch" Width="116" Height="81">
                            <!-- App logo section -->
                            <Canvas Width="116" Height="81">
                                <!-- Canvas for logo -->
                                <Path Canvas.Left="-56px"
                                      Canvas.Top="-118px" 
                                      Name="LeftBracket" 
                                      Fill="#fff0a30a" 
                                      StrokeThickness="3.4" >
